<!--Category Section with swiper (View model)--> 
<section class="categories-section container">
    <h2  class="text-center mt-5 mb-5 ">Our Categories</h2>
    @if (ViewBag.CategoryCount > 0)
    {  
    <div class=" swiper category_swiper">
         <div class="swiper-wrapper">
            <!-- Slides -->
            @foreach (var category in ViewBag.categories)
            {
                <div class="swiper-slide d-flex justify-content-center">
                    <div class="category_card">
                        <div class="category_img border border-2">
                                <img src=@category.ImageUrl alt="category_img" />
                        </div>
                        <div class="category_name mt-2">
                            <h3 class="text-center">@category.Name</h3>
                        </div>
                    </div>
                </div>
            }
            
           
         </div>
      
        </div>
    }
    else
    {
        <div class="card bg-danger-subtle text-center p-2">
            There are no Categories yet!
        </div>
    }
</section>

<section class="breakSection mt-5 d-flex justify-content-center align-items-center">
    <div class="breakSectionContent text-white text-center ">
        <h2>Flash Sale: Up to 50% Off <br /> On Select Items!</h2>
        <p>Don’t miss out on our flash sale event! For a limited time, enjoy up to 50% <br /> off on a selection of our best-selling products.</p>
    </div>
</section>

@* Products top4 *@
<section class="container">
    <h2 class="text-center mt-5 mb-5 ">Our Plants</h2>
    @if (ViewBag.ProductCount > 0)
    {
        <div class=" px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var product in ViewBag.first4Products)
                {
                    <div class="col-md-3 mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <!-- Product image-->
                            <div style="width:100%; height:300px; overflow:hidden;">
                                <img src=@product.ImageUrl
                                     alt="product_Img"
                                     class="w-100 h-100 object-fit-cover"
                                      />
                            </div>
                             <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@product.Name</h5>
                                    @* category name *@
                                    <p class="text-black-50">@product.CategoryName</p>
                                    <!-- Product price-->
                                    <span>$ @product.Price </span>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn my-no-hover mt-auto px-3 rounded-5" href="/user/home/ProductDetails/@product.Id">More Details</a></div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    }
    else
    {
        <div class="card bg-danger-subtle text-center p-2 mb-3">
            There are no Products yet!
        </div>
    }

    
    @if (ViewBag.ProductCount > 4)
    {
    <div class="text-center">
            <a href="/user/home/AllProducts" class="btn my-no-hover w-25 mb-5 p-2  rounded-5">See More</a>
    </div>  
    }
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.js"></script>

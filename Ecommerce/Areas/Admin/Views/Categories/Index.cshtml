@* ViewBag.categories *@
@{
    ViewBag.PageTitle = "All Categories";
    ViewBag.BtnTitle = "Create New Category";
    ViewBag.BtnAspController = "categories";
    ViewBag.BtnAspAction = "Create"; 
}

<table class="table table-hover  table-bordered  w-100 " style="table-layout: fixed;" >
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in ViewBag.categories)
        {
            <tr>
                <td  >@category.Id</td>
                <td  >@category.Name</td>

                <td class="d-flex justify-content-center ">
                    <div style="width:50%; height:150px; overflow:hidden;" >
                        <img src=@category.ImageUrl
                             alt="category_img"
                             class="w-100 h-100 object-fit-contain" />
                    </div>
                 </td>
                <td>
                    <a asp-controller="categories" asp-action="edit" asp-route-id="@category.Id" class="btn btn-warning me-2">Edit</a>
                    <a asp-controller="categories" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
             </tr>

        }
      
    </tbody>
</table>



